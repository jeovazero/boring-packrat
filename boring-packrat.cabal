  default-language:    Haskell2010

test-suite spec
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  hs-source-dirs:     test
  ghc-options:        -Wall
  build-depends:      base,
                      boring-packrat,
                      hspec,
                      bytestring,
                      word8,
                      containers
