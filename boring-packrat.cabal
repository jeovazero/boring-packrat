build-type:          Simple

library
  default-language:    Haskell2010
  hs-source-dirs:      lib
  exposed-modules:     BoringPackrat,
                       BoringPackrat.EmailGrammar,
                       BoringPackrat.Terminals
  build-depends:       base,
                       bytestring,
                       word8,
                       containers,
                       vector

  ghc-options:         -Wall

executable boring-packrat
  main-is:             Main.hs
