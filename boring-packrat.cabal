build-type:            Simple

common deps
  build-depends:       base,
                       bytestring,
                       utf8-string,
                       word8,
  ghc-options:         -Wall
  default-language:    Haskell2010

library
  import:              deps
  hs-source-dirs:      lib
  exposed-modules:     BoringPackrat,
                       BoringPackrat.Email,
                       BoringPackrat.Terminals,
                       BoringPackrat.Bits,
                       BoringPackrat.Chars,
                       BoringPackrat.PrettyPrint,
  build-depends:       containers,
                       vector 

test-suite spec
  import:             deps
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  hs-source-dirs:     test
  ghc-options:        -Wall
  build-tool-depends: hspec-discover:hspec-discover == 2.*
  build-depends:      boring-packrat,
                      hspec
  other-modules:      EmailSpec
